<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/name_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inder"
            android:textStyle="bold"
            android:textColor="@color/DarkestBlue"
            android:textSize="25dp"

            android:text="Name:"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name_main"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Manmeet Singh"
            android:inputType="textCapWords"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/Rollno_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"

        app:layout_constraintTop_toBottomOf="@+id/name_up"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inder"
            android:textStyle="bold"
            android:textColor="@color/DarkestBlue"
            android:textSize="25dp"

            android:text="Roll NO:"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email_main"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="72011557"
            android:inputType="number"
            />


    </LinearLayout>

   <LinearLayout
       android:id="@+id/btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="15dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"

       app:layout_constraintTop_toBottomOf="@+id/Rollno_up"
       tools:ignore="MissingConstraints">


       <TextView
           android:id="@+id/udpdate"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Update"
           android:textSize="25dp"
           android:layout_marginRight="100dp"
           android:fontFamily="@font/inder"
           android:textColor="@color/DarkestBlue"
           />

       <TextView
           android:id="@+id/cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/inder"
           android:text="Cancel"
           android:textColor="@color/DarkestBlue"
           android:textSize="25dp"
           tools:ignore="MissingConstraints"

           />

   </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>